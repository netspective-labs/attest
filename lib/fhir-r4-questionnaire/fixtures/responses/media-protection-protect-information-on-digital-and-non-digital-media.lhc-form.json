          ],
          "questionCode": "media-protection-media-disposal-policy",
          "questionCodeSystem": "opsfolio/LHCform/CMMC-Level1-Questionnaire",
          "linkId": "957584520694",
          "answerCardinality": {
            "max": "1",
            "min": "0"
          },
          "displayControl": {
